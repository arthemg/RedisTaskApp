<html>

<head>
    <title>Redis Tasks</title>
    <link rel="stylesheet" href="style/style.css">
    <link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/cerulean/bootstrap.min.css">

</head>

<body>
    <nav class="navbar navbar-inverse navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Redis Tasks</a>
    </nav>

    <div class="container" style="margin:10px;">
        <form method="post" action="/task/add">
            <label>Add Task</label>
            <input type="text" name="task" placeholder="Add Task">
            <input type="submit" value="Submit">
        </form>

        <h3><%= title %></h3>
        <form method="POST" action="/task/delete">
            <ul class="task-list">
                <% for (var task in tasks){ %>
                <li>
                    <label>
                        <input type="checkbox" name="tasks" class="del"
                            value=" <%=task %>"><span><%= tasks[task] %></span>
                    </label>
                </li>
                <% } %>
            </ul>
            <input type="submit" value="Remove">
        </form>

        <div class="card card-body bg-light">
            <h3>Edit Next Business Call</h3>
            Name: <%= call.name %><br>
            Company: <%= call.company %><br>
            Phone: <%= call.phone %><br>
            Time: <%= call.time %>
        </div>

        <hr>

        <div class="card card-body bg-light">
            <form method="POST" action="/call/add">
                <label>Contact Name</label><br>
                <input type="text" name="name" placeholder="Task Name">
                <br><br>
                <label>Company</label><br>
                <input type="text" name="company" placeholder="Company">
                <br><br>
                <label>Phone</label><br>
                <input type="text" name="phone" placeholder="Phone">
                <br><br>
                <label>Day & Time</label><br>
                <input type="text" name="time" placeholder="Time">
                <br><br>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</body>

</html>